SELECT 
    parent.location_code || ' > ' || child.location_code AS location_room_mapping
FROM 
    psc_site_code_info parent
JOIN 
    psc_site_code_info child
ON 
    parent.location_uuid = child.parent_loc_uuid
WHERE 
    parent.location_code IN (
        'VISTCA65', 'BLTNMN86', 'NWCSDEBG', 'FRDLNYEK', 'YNKRNYZL', 'WMTPPAAA', 'HLBOOR38',
        'BBTPNJDA', 'ORLHFL01', 'PMBRFLTF', 'ESYRYNEN', 'HRNTNYCR', 'RDMEWA22', 'LENYKSCJ',
        'OMALNEXU', 'NLVGNVOQ', 'CHNTVAAV', 'RONKVALV', 'ANJTMDAY', 'AURSCOTY', 'BGVLPAAM',
        'JHTWPADP', 'RCMDVA83' -- continue listing all 54 base locations
    )
ORDER BY 
    parent.location_code, child.location_code;
