DECLARE @SearchValue NVARCHAR(100) = 'PDU A11';
DECLARE @TableName NVARCHAR(100) = 'PowerUnits';  -- change your table name
DECLARE @SchemaName NVARCHAR(100) = 'App';
DECLARE @SQL NVARCHAR(MAX) = '';

SELECT @SQL += '
SELECT TOP 5 ''' + COLUMN_NAME + ''' AS ColumnName, [' + COLUMN_NAME + '] AS ValueFound
FROM [' + @SchemaName + '].[' + @TableName + ']
WHERE [' + COLUMN_NAME + '] LIKE ''%' + @SearchValue + '%'';'
FROM INFORMATION_SCHEMA.COLUMNS
WHERE TABLE_SCHEMA = @SchemaName
  AND TABLE_NAME = @TableName
  AND DATA_TYPE IN ('varchar', 'nvarchar', 'text');

PRINT @SQL;  -- or EXEC(@SQL) if confident to run
